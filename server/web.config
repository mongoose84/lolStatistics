<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="aspNetCore"
           path="*"
           verb="*"
           modules="AspNetCoreModule"
           resourceType="Unspecified" />
    </handlers>

    <aspNetCore processPath=".\RiotProxy.exe"
            arguments=""
            stdoutLogEnabled="true"
            stdoutLogFile=".\logs\stdout"
            hostingModel="OutOfProcess">
      <environmentVariables>
        <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
      </environmentVariables>
    </aspNetCore>

    <!-- Ensure CORS headers from ASP.NET Core are passed through -->
    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>